@page
@model MutantOrchidTradingSysRazorPage.Pages.User.TransactionModel
@{
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eflower Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/user/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~user/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <!-- CUSTOM STYLES-->
    <link href="~user/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <!-- TABLE STYLES-->
    <link href="~user/js/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/User/Profile" class="btn btn-danger square-btn-adjust">Profile</a>
                    <h1 class="m-0 display-5 font-weight-semi-bold" style="color: #D19C97;"><span class="text-primary font-weight-bold border px-3 mr-1" style="color: #D19C97;"></span>Profile</h1>
                </a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;">
               
                <a href="/Logout" class="btn btn-danger square-btn-adjust">Đăng Xuất</a>
            </div>
        </nav>
        <!-- /. NAV TOP  -->
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Lịch Sử Giao Dịch</h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />

                <div class="row">
                    <div class="col-md-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">

                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Số tiền</th>
                                                <th>Thời Gian Giao Dịch</th>
                                                <th>Trạng Thái</th>
                                                
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var deduction in Model.DeductionRequests)
                                            {
                                                <tr>

                                                    <td style="color: @(deduction.Status.Equals("Success") ? "red" : (deduction.Status.Equals("Fail") ? "green" : "inherit"))">@(deduction.Status.Equals("Success") ? "-" : "")@deduction.Amount</td>
                                                    <td>@deduction.Date</td>
                                                    <td style="color: @(deduction.Status.Equals("Success") ? "green" : (deduction.Status.Equals("Fail") ? "red" : "inherit"))">@deduction.Status</td>
                                                    
                                                   
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                        <!--End Advanced Tables -->
                    </div>
                </div>
            </div>
            <!-- /. ROW  -->
        </div>
    </div>
    <!-- /. ROW  -->

    </div>

    </div>
    <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- jQuery -->
    <script src="~user/js/jquery-1.10.2.js"></script>

    <!-- Bootstrap Scripts -->
    <script src="~user/js/bootstrap.min.js"></script>

    <!-- Other Scripts -->
    <script src="~user/js/jquery.metisMenu.js"></script>
    <script src="~user/js/dataTables/jquery.dataTables.js"></script>
    <script src="~user/js/dataTables/dataTables.bootstrap.js"></script>
    <script src="~user/js/custom.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~user/js/custom.js"></script>


</body>
</html>
