@page
@model PhanSyTrongRazorPage.Pages.Admin.ManageCustomer.CustomerCreate

@{
    ViewData["Title"] = "Create";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Create a new Customer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @{
                if (ViewData["Message"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewData["Message"]
                    </div>
                }
            }
            <div asp-validation-summary="ModelOnly" class="text-danger fw-bold"></div>
            <div class="form-group">
                <label asp-for="customer.CustomerFullName" class="control-label"></label>
                <span asp-validation-for="customer.CustomerFullName" class="text-danger fw-bold"></span>
                <input asp-for="customer.CustomerFullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="customer.Telephone" class="control-label"></label>
                <span asp-validation-for="customer.Telephone" class="text-danger fw-bold"></span>
                <input asp-for="customer.Telephone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="customer.EmailAddress" class="control-label"></label>
                <span asp-validation-for="customer.EmailAddress" class="text-danger fw-bold"></span>
                <input asp-for="customer.EmailAddress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="customer.Password" class="control-label"></label>
                <span asp-validation-for="customer.Password" class="text-danger fw-bold"></span>
                <input asp-for="customer.Password" class="form-control" type="password" value="@ViewData["Pass"]" />
            </div>
            <div class="form-group">
                <label asp-for="customer.CustomerBirthday" class="control-label"></label>
                <span asp-validation-for="customer.CustomerBirthday" class="text-danger fw-bold"></span>
                <input asp-for="customer.CustomerBirthday" class="form-control" type="date"
                       max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
