@page
@model PhanSyTrongRazorPage.Pages.Admin.ManageCustomer.CustomerDelete

@{
    ViewData["Title"] = "Customer Delete";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1>Delete Customer</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this customer?</h4>

            <div>
                <h5>Customer Details</h5>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.customer.CustomerFullName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.customer.CustomerFullName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.customer.Telephone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.customer.Telephone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.customer.EmailAddress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.customer.EmailAddress)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.customer.CustomerBirthday)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.customer.CustomerBirthday)
                    </dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="customer.CustomerId" />
                    <button type="submit" class="btn btn-danger">Delete</button> |
                    <a asp-page="./ListCustomer" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
