@page
@model PhanSyTrongRazorPage.Pages.Admin.ManageBooking.ListBookingModel
@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<head>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="row justify-content-lg-start">
				<div class="col-4 justify-content-around d-md-inline-flex">
					<h3>Booking list</h3>
					<a asp-page="./BookingCreate" class="btn btn-outline-success "><i class="fa-solid fa-plus"></i></a>
				</div>
				<div class="col-8 form-group">
					<form class="d-md-inline-flex align-items-center justify-content-center" role="search" method="post">
						<label asp-for="StartDate" class="control-label"></label>
						<input style="margin-left: 6px" class="form-control me-2" type="date" placeholder="StartDate" aria-label="StartDate" asp-for="StartDate">
						<label asp-for="EndDate" class="control-label"></label>
						<input style="margin-left: 6px" class="form-control me-2" type="date" placeholder="EndDate" aria-label="EndDate" asp-for="EndDate">
						<button class="btn btn-primary" style="color: #fff" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@if (Model.Booking == null || !Model.Booking.Any())
{
	if (Model.isSearch)
	{
		<p>No room list found! Input another Room Number</p>
	}
	else
	{
		<p>List room is empty!</p>
	}
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].BookingReservationId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].CustomerFullName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].RoomNumber)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].RoomTypeName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].TotalPrice)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].StartDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].EndDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].ActualPrice)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Booking[0].BookingDate)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Booking)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.BookingReservationId)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CustomerFullName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.RoomNumber)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.RoomTypeName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TotalPrice)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.StartDate)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.EndDate)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ActualPrice)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.BookingDate)
					</td>
					<td>
						<a asp-page="./BookingEdit" asp-route-id="@item.RoomId" class="btn btn-outline-success"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
						<a asp-page="./BookingDelete" asp-route-id="@item.RoomId" class="btn btn-outline-danger"><i class="fa-solid fa-trash-can"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
