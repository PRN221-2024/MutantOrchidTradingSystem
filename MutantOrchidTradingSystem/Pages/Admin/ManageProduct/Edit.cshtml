@page 
@model MutantOrchidTradingSysRazorPage.Pages.Admin.ManageProduct.EditModel
@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Free Bootstrap Admin Template : Binary Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/user/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~user/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <!-- CUSTOM STYLES-->
    <link href="~user/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <!-- TABLE STYLES-->
    <link href="~user/js/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Binary admin</a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;">
                Last access : 30 May 2014 &nbsp; <a href="#" class="btn btn-danger square-btn-adjust">Logout</a>
            </div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li>
                        <a href="index.html"><i class="fa fa-dashboard fa-3x"></i> Manage Product</a>
                    </li>
                    <li>
                        <a href="ui.html"><i class="fa fa-desktop fa-3x"></i> Manage Customer</a>
                    </li>
                    <li>
                        <a href="tab-panel.html"><i class="fa fa-qrcode fa-3x"></i> Manage Order</a>
                    </li>

                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Edit Product</h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />

                <div class="row" id="editForm">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="UpdatedProduct.Id" />
                                <div>
                                    <form method = "post">
                                        <label for="Name">Product Name:</label>
                                        <input type="text" class="form-control" asp-for="UpdatedProduct.Name">

                                        <label for="Description">Description:</label>
                                        <textarea class="form-control" asp-for="UpdatedProduct.Description"></textarea>

                                        <label for="productPrice">Price:</label>
                                        <input type="number" class="form-control" asp-for="UpdatedProduct.Price">

                                        <label for="productQuantity">Quantity:</label>
                                        <input type="number" class="form-control" asp-for="UpdatedProduct.Quantity">

                                        <label for="Path">Path:</label>
                                        <input type="text" class="form-control" asp-for="UpdatedProduct.Path" style="margin-bottom: 10px;">

                                        <label for="Status">Status:</label>
                                        <select name="UpdatedProduct.Status" asp-for="UpdatedProduct.Status">
                                            <option value="1">True</option>
                                            <option value="0">False</option>
                                        </select>

                                        <div class="text-right">
                                            <input type="submit" value="Save Changes" class="btn btn-primary">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <a asp-page="./ManageProduct">Back to List</a>
                </div>

                        <!--End Advanced Tables -->
                    </div>
                </div>
            </div>
            <!-- /. ROW  -->
        </div>

    </div>
    <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- jQuery -->
    <script src="~user/js/jquery-1.10.2.js"></script>

    <!-- Bootstrap Scripts -->
    <script src="~user/js/bootstrap.min.js"></script>

    <!-- Other Scripts -->
    <script src="~user/js/jquery.metisMenu.js"></script>
    <script src="~user/js/dataTables/jquery.dataTables.js"></script>
    <script src="~user/js/dataTables/dataTables.bootstrap.js"></script>
    <script src="~user/js/custom.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~user/js/custom.js"></script>


</body>
</html>
