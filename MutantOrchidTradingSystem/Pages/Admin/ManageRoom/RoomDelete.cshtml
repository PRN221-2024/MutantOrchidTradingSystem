@page
@model PhanSyTrongRazorPage.Pages.Admin.ManageRoom.RoomDeleteModel
@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <h1>Delete Customer</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this customer?</h4>

            <div>
                <h5>Customer Details</h5>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.room.RoomNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.room.RoomNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.room.RoomDetailDescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.room.RoomDetailDescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.room.RoomType.RoomTypeName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.room.RoomType.RoomTypeName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.room.RoomType.TypeDescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.room.RoomType.TypeDescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.room.RoomMaxCapacity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.room.RoomMaxCapacity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.room.RoomPricePerDay)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.room.RoomPricePerDay)
                    </dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="room.RoomId" />
                    <button type="submit" class="btn btn-danger">Delete</button> |
                    <a asp-page="./ListCustomer" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>