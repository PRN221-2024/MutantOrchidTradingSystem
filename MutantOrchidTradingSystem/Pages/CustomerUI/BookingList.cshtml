@page
@model PhanSyTrongRazorPage.Pages.CustomerUI.BookingListModel
@{
	Layout = "/Pages/Shared/_LayoutCustomer.cshtml";
}

<head>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="row justify-content-lg-start">
				<div class="col-10 justify-content-around d-md-inline-flex">
					<h3>Wellcome <span style="color: red">@Html.DisplayFor(model => model.CustomerName)</span></h3>
				</div>
			</div>
			<div class="row justify-content-lg-start">
				<div class="col-10 justify-content-around d-md-inline-flex">
					<h2>This is your Booking Information!</h2>
				</div>
			</div>
		</div>
	</div>
</div>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].BookingReservationId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].CustomerFullName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].RoomNumber)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].RoomTypeName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].TotalPrice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].StartDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].EndDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].ActualPrice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Booking[0].BookingDate)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Booking)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.BookingReservationId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CustomerFullName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RoomNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RoomTypeName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TotalPrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.StartDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EndDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ActualPrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BookingDate)
				</td>
			</tr>
		}
	</tbody>
</table>
