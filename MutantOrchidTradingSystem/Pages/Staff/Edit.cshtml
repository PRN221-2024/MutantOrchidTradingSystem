@page
@model MutantOrchidTradingSysRazorPage.Pages.Staff.EditModel
@{
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eflower Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/user/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~user/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <!-- CUSTOM STYLES-->
    <link href="~user/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <!-- TABLE STYLES-->
    <link href="~user/js/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Staff/Auction" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold" style="color: #D19C97;"><span class="text-primary font-weight-bold border px-3 mr-1" style="color: #D19C97;">E|</span>Flower</h1>
                </a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;">
                <a href="/Logout" class="btn btn-danger square-btn-adjust">Đăng Xuất</a>
            </div>
        </nav>
        <!-- /. NAV TOP  -->
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Tạo Đấu Giá Mới</h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />

                <div class="row" id="editForm">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div>
                                    <form method="post">
                                        <input type="hidden" asp-for="@Model.Auction.Id" />
                                        <input type="hidden" asp-for="@Model.Auction.Status" />
                                        <div class="form-group">
                                            <label for="productId">Sản phẩm:</label>
                                            <select class="form-control" id="productId" asp-for="@Model.Auction.ProductId" asp-items="Model.ProductOptions"></select>
                                        </div>
                                        <div class="form-group">
                                            <label for="startTime">Thời Gian Bắt Đầu:</label>
                                            <input type="datetime-local" class="form-control" id="startTime" asp-for="@Model.Auction.StartTime">
                                        </div>
                                        <div class="form-group">
                                            <label for="endTime">Thời Gian Kết Thúc:</label>
                                            <input type="datetime-local" class="form-control" id="endTime" asp-for="@Model.Auction.EndTime">
                                            <span asp-validation-for="@Model.Auction.EndTime" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="startingPrice">Giá Khởi Điểm:</label>
                                            <input type="number" class="form-control" id="startingPrice" asp-for="@Model.Auction.StartingPrice">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Chỉnh Sửa Đấu Giá</button>
                                        
                                    </form>
                                    <a href="Auction" class="btn btn-secondary">Quay Lại</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
    <!-- /. ROW  -->
    </div>

    </div>
    <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- jQuery -->
    <script src="~user/js/jquery-1.10.2.js"></script>

    <!-- Bootstrap Scripts -->
    <script src="~user/js/bootstrap.min.js"></script>

    <!-- Other Scripts -->
    <script src="~user/js/jquery.metisMenu.js"></script>
    <script src="~user/js/dataTables/jquery.dataTables.js"></script>
    <script src="~user/js/dataTables/dataTables.bootstrap.js"></script>
    <script src="~user/js/custom.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~user/js/custom.js"></script>


</body>
</html>